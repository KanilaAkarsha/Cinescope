{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "ignoreDeprecations": "6.0",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/admin/users/page.jsx",
    "app/admin/users/loading.jsx",
    "app/admin/settings/page.jsx",
    "app/admin/reviews/loading.jsx",
    "app/admin/reviews/page.jsx",
    "app/admin/profile/page.jsx",
    "app/admin/analytics/page.jsx",
    "app/about/page.jsx",
    "app/genres/page.jsx"
  ],
  "exclude": ["node_modules"]
}
